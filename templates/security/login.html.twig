{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {# if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif #}

    
    


        <div class="login-wrapper fadeInDown">
        
        <div id="formContent">

         <h3 class="h3 mb-3 mt-3 text-left">Login</h3>
            <hr>

        <div class="container">
            <!-- Login Form -->
           
            <div class="row">
                    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control text-left" autocomplete="username" required autofocus> 
            </div>
           
           <div class="row">
                <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control text-left" autocomplete="current-password" required>
           </div>
    

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
   

            <!-- Remind Passowrd 
            <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
            </div>-->
        </div>

             <hr>
           <button class="btn btn-primary mb-3" type="submit">
        Login
    </button>

        </div>

        

        </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    
</form>
{% endblock %}
