{% extends 'admin.html.twig' %}

{% block title %}Must Do Diving - {{ controller_name }} {% endblock %}

{% block body %}
 
<div class="container">
    <h4 class="mt-3">{{ controller_name }}</h4>
    <hr>
    <div class="row ml-1 mb-5">
         
            <div class="btn-group"><a class="btn btn-primary" href="{{ path('create_page') }}">Create New Page</a> <button type="button" class="btn btn-warning">Change Menu Order</button></div>
              
            <div class="col-md-2">
            <select class="form-control" name="">
                <option value="3">SHOW ALL</option>
                <option value="1">SHOW PUBLISHED</option>
                <option value="0">SHOW UNPUBLISHED</option>
            </select>
            </div>
    </div>


    <table class="table table-striped table-bordered" id="pages" width="100%">
        <thead>
            <tr>
                <th>Order</th>
                <th>Title</th>
                <th>Description</th>
                <th>Page URL</th>
                <th>Date Created</th>
                <th>Date Updated</th>
                <th>Options</th>
            </tr>
        </thead>
    
    </table>



    </div>


    

    
</div>
{% endblock %}
