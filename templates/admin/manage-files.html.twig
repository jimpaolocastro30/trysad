{% extends 'admin.html.twig' %}

{% block title %}Must Do Diving - {{ controller_name }} {% endblock %}

{% block body %}
 
<div class="container">
    <h5 class="mt-5">Filter Options</h5>
     {{ form_start(manageFiles) }}
    <div class="row mb-5">
        <div class="col-md-2">
                {{ form_row(manageFiles.ftype) }}
                {{ form_row(manageFiles.year) }}          
        </div>

       <div class="col-md-3">
                {{ form_row(manageFiles.animal) }}  

                {{ form_row(manageFiles.sAnimal) }}  
        </div>

          <div class="col-md-3">
                {{ form_row(manageFiles.location) }}  

                 {{ form_row(manageFiles.sLocation) }}
            </div>

       <div class="col-md-3">
                {{ form_row(manageFiles.trip) }}

                 {{ form_row(manageFiles.button) }}

                 
        </div>
    </div>
       
        {{ form_end(manageFiles) }}
    <hr>

    <table id="tblFiles" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>Thumbnail</th>
                    <th>Type</th>
                    <th>Animal</th>
                    <th>Location</th>
                    <th>Year</th>
                    <th>Trips</th>
                    <th>Description</th>
                    <th>Option</th>
                </tr>
            </thead>
            
    
    </table>

    
</div>
{% endblock %}
