{% extends 'admin.html.twig' %}

{% block title %}Must Do Diving - {{ controller_name }} {% endblock %}

{% block body %}
 
  <div class="container">
    {% for message in app.flashes('info') %}
                <div class="alert alert-success mt-30">{{ message }}</div>
        {% endfor %} 
    
   <div class="col-md-6 mt-30">     
     
                {{ form_start(frmlocation)}}
                
                <div class="row">
                        <div class="col-md-8">
                                {{ form_row(frmlocation.location) }}
                        </div>

                        <div class="col-md-4">
                                {{ form_row(frmlocation.button) }}
                        </div>
                </div>

                {{ form_end(frmlocation)}}
     
    <hr>

       <table id="location" class="table table-striped table-bordered">
                <thead>
                        <tr>
                                <th>Location</th>
                        </tr>
                </thead>
       </table> 

   </div> 
   </div>

    
</div>
{% endblock %}
 