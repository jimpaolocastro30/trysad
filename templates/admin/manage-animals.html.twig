        {% endfor %} 
    
   <div class="col-md-6 mt-30">     
     
                {{ form_start(frmanimals)}}
                
                <div class="row">
                        <div class="col-md-8">
                                {{ form_row(frmanimals.animal) }}
                        </div>

                        <div class="col-md-4">
                                {{ form_row(frmanimals.button) }}
                        </div>
                </div>

                {{ form_end(frmanimals)}}
     
    <hr>

       <table id="animals" class="table table-striped table-bordered">
                <thead>
                        <tr>
                                <th>Animals</th>
                        </tr>
                </thead>
       </table> 

   </div> 
    
    
</div>
{% endblock %}
